<h2>Register</h2>
{{#if errors}}
	<div class="form-error">
	{{#each errors}}
		<p>{{msg}}</p>
	{{/each}}
</div>
{{/if}}
<form action="/users/register" method="post">
	<div class="form-group">
		<label for="firstname">First name</label>
		<input class="form-input-field" type="text" placeholder="First name" name="firstname">
	</div>
	<div class="form-group">
		<label for="lastname">Last name</label>
		<input class="form-input-field" type="text" placeholder="Last name" name="lastname">
	</div>	
	<div class="form-group">
		<label for="username">Username</label>
		<input class="form-input-field" type="text" placeholder="Username" name="username">
	</div>
	<div class="form-group">
		<label for="email">Email</label>
		<input class="form-input-field" type="email" placeholder="Email" name="email">
	</div>	
	<div class="form-group">
		<label for="password">Password</label>
		<input class="form-input-field" type="password" placeholder="Password" name="passwword">
	</div>
	<div class="form-group">
		<label for="password2">Confirm Password</label>
		<input class="form-input-field" type="password" placeholder="Password" name="passwword2">
	</div>	
	<button type="submit">Submit</button>
</form>